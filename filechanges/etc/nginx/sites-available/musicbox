map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /usr/share/nginx/www;
    index index.html index.htm;

    # Invalid catch-all domain name
    server_name _;

    # Enable websocket proxying for mopidy
    location /mopidy/ws {
        proxy_pass http://127.0.0.1:6680;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_read_timeout 604800;
        proxy_send_timeout 604800;
    }

    # The $webclient variable here controls the default webclient.
    # This should be overridden by setting the variable to a different webclient
    # in snippets/musicbox.conf. 
    location = / {
        set $webclient musicbox_webclient;
        include conf.d/*musicbox;
        rewrite ^ http://$host/$webclient/;
        proxy_pass http://127.0.0.1:6680/;
        proxy_http_version 1.1;
    }

    # Redirect requests on port 80 to port 6680
    location / {
        proxy_pass http://127.0.0.1:6680/;
        proxy_http_version 1.1;
    }
}
